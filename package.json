{
  "name": "nikitos",
  "version": "0.0.0-alpha",
  "description": "AI-first operating system. Your ideas, instantly interactive.",
  "author": {
    "name": "Roma B., Neutrome Labs",
    "email": "romab@neutrome.dev"
  },
  "main": "app/main.js",
  "type": "commonjs",
  "private": true,
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/bun": "latest",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "vite": "^7.0.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "start": "electron .",
    "dev": "bunx concurrently \"NODE_ENV=development bunx vite --port 5173\" \"NODE_ENV=development bunx electron .\"",
    "build": "vite build",
    "release-linux": "electron-builder -l appimage",
    "release-windows": "electron-builder -w portable"
  },
  "build": {
    "files": [
      "dist/**/*",
      "app/**/*",
      "prompt-*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
